---
import { NAVIGATION, SOCIAL_LINKS, SITE } from '@config/site';
import { Linkedin, Twitter, Facebook, Instagram } from 'lucide-react';
---

<footer class="bg-neutral-900 text-neutral-300">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-4">
      <!-- Company Info -->
      <div class="lg:col-span-1 space-y-6">
        <a href="/" class="flex items-center space-x-3 group">
          <img src="/tanaslogo.png" alt="Tanas Logo" class="h-12 w-auto" />
          <span class="text-lg font-bold text-white">
            Tanas Fuarcılık
          </span>
        </a>
        <p class="text-sm text-neutral-400 leading-relaxed max-w-xs">
          {SITE.description}
        </p>
        <div class="flex space-x-4">
          <a
            href={SOCIAL_LINKS.linkedin}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-neutral-800 text-neutral-400 hover:bg-[oklch(0.828_0.189_84.429)] hover:text-white transition-all"
            aria-label="LinkedIn"
          >
            <Linkedin className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.instagram}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-neutral-800 text-neutral-400 hover:bg-[oklch(0.828_0.189_84.429)] hover:text-white transition-all"
            aria-label="Instagram"
          >
            <Instagram className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.facebook}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-neutral-800 text-neutral-400 hover:bg-[oklch(0.828_0.189_84.429)] hover:text-white transition-all"
            aria-label="Facebook"
          >
            <Facebook className="w-5 h-5" />
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          Quick Links
        </h3>
        <ul class="space-y-3">
          {NAVIGATION.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-neutral-400 hover:text-[oklch(0.828_0.189_84.429)] transition-colors inline-flex items-center group"
              >
                <span class="w-0 group-hover:w-2 h-0.5 bg-[oklch(0.828_0.189_84.429)] transition-all mr-0 group-hover:mr-2"></span>
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          Hizmetlerimiz
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/capabilities" class="text-sm text-neutral-400 hover:text-[oklch(0.828_0.189_84.429)] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[oklch(0.828_0.189_84.429)] transition-all mr-0 group-hover:mr-2"></span>
              Fuar Stand Çözümleri
            </a>
          </li>
          <li>
            <a href="/capabilities" class="text-sm text-neutral-400 hover:text-[oklch(0.828_0.189_84.429)] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[oklch(0.828_0.189_84.429)] transition-all mr-0 group-hover:mr-2"></span>
              Reklam & Tanıtım Üretimleri
            </a>
          </li>
          <li>
            <a href="/capabilities" class="text-sm text-neutral-400 hover:text-[oklch(0.828_0.189_84.429)] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[oklch(0.828_0.189_84.429)] transition-all mr-0 group-hover:mr-2"></span>
              Tasarım & Projelendirme
            </a>
          </li>
          <li>
            <a href="/capabilities" class="text-sm text-neutral-400 hover:text-[oklch(0.828_0.189_84.429)] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[oklch(0.828_0.189_84.429)] transition-all mr-0 group-hover:mr-2"></span>
              Üretim, Kurulum & Teknik Destek
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          Birlikte Çalışalım
        </h3>
        <ul class="space-y-3 text-sm">
          <li>
            <a href="/rfq" class="text-neutral-400 hover:text-[oklch(0.828_0.189_84.429)] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[oklch(0.828_0.189_84.429)] transition-all mr-0 group-hover:mr-2"></span>
              Teklif Al
            </a>
          </li>
          <li>
            <a href="/facilities" class="text-neutral-400 hover:text-[oklch(0.828_0.189_84.429)] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[oklch(0.828_0.189_84.429)] transition-all mr-0 group-hover:mr-2"></span>
              Find a Facility
            </a>
          </li>
          <li>
            <a href="/documentation" class="text-neutral-400 hover:text-[oklch(0.828_0.189_84.429)] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[oklch(0.828_0.189_84.429)] transition-all mr-0 group-hover:mr-2"></span>
              Documentation
            </a>
          </li>
        </ul>
        
        <div class="mt-8">
          <a
            href="/rfq"
            class="inline-flex items-center px-6 py-3 text-sm font-semibold text-white bg-linear-to-r from-[oklch(0.828_0.189_84.429)] to-[oklch(0.828_0.189_84.429)] hover:from-[oklch(0.8_0.189_84.429)] hover:to-[oklch(0.8_0.189_84.429)] rounded-lg shadow-lg hover:shadow-xl transition-all"
          >
            Birlikte Çalışalım
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-neutral-800">
      <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0">
        <p class="text-sm text-neutral-400">
          &copy; {new Date().getFullYear()} {SITE.author}. All rights reserved.
        </p>
        <div class="flex items-center space-x-6 text-sm">
          <a href="/" class="text-neutral-400 hover:text-[oklch(0.828_0.189_84.429)] transition-colors">
            Privacy Policy
          </a>
          <span class="text-neutral-700">•</span>
          <a href="/" class="text-neutral-400 hover:text-[oklch(0.828_0.189_84.429)] transition-colors">
            Terms of Service
          </a>
          <span class="text-neutral-700">•</span>
          <a href="/" class="text-neutral-400 hover:text-[oklch(0.828_0.189_84.429)] transition-colors">
            Cookie Policy
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
