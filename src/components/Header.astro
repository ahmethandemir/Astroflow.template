---
import { NAVIGATION } from '@config/site';
import MobileMenu from '@components/react/MobileMenu';

const { currentPathname } = Astro.props;
const isActiveLink = (href: string) : boolean => { return href === currentPathname; }

---

<header class="sticky top-0 z-50 w-full border-b border-neutral-700 bg-neutral-800/95 backdrop-blur-md shadow-sm">
  <nav class="container mx-auto flex h-20 items-center justify-between px-4 sm:px-6 lg:px-8">
    <!-- Logo -->
    <div class="flex items-center">
      <a href="/" class="flex items-center space-x-3 group">
        <img src="/tanaslogo.png" alt="Tanas Logo" class="h-16 w-auto group-hover:scale-110 transition-transform" />
        <span class="text-lg font-bold text-[oklch(0.828_0.189_84.429)]">
          Tanas Fuarcılık
        </span>
      </a>
    </div>

    <!-- Desktop Navigation -->
    <div class="hidden lg:flex lg:items-center lg:space-x-1">
      {NAVIGATION.map((item) => {
        const isActive = isActiveLink(item.href);
        return (
        <a
          href={item.href}
          class={`px-4 py-2 text-sm font-semibold text-neutral-300 hover:text-[oklch(0.828_0.189_84.429)] hover:bg-neutral-700 rounded-lg transition-all relative group ${isActive ? 'nav-active' : ''}`}
        >
          {item.name}
        </a>
      );
      })}
    </div>

    <!-- CTA Button -->
    <div class="hidden lg:flex lg:items-center lg:space-x-4">
      <a
        href="/rfq"
        class="inline-flex items-center px-6 py-2.5 text-sm font-bold text-neutral-900 bg-linear-to-r from-[oklch(0.828_0.189_84.429)] to-[oklch(0.828_0.189_84.429)] hover:from-[oklch(0.8_0.189_84.429)] hover:to-[oklch(0.8_0.189_84.429)] rounded-lg shadow-md hover:shadow-lg transition-all"
      >
        Teklif Al
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <MobileMenu client:idle />
  </nav>
</header>
