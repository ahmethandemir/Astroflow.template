---
import { Image } from 'astro:assets';

import discoveryImg from '@assets/photo-1454165804606-c3d57bc86b40.jpg';
import implementationImg from '@assets/photo-1522071820081-009f0129c71c.jpg';
import optimizationImg from '@assets/photo-1551288049-bebda4e38f71.jpg';
import supportGrowthImg from '@assets/photo-1552664730-d307ca884978.jpg';

interface Step {
  number: number;
  title: string;
  description: string;
  image: ImageMetadata;
  alt: string;
  hoverBorder: string;
  gradient: string;
  textColor: string;
}

const steps = [
  {
    number: 1,
    title: "İhtiyaç Analizi & Brief",
    description: "Projenin hedeflerini, alan gereksinimlerini ve beklentileri netleştirerek işe başlıyoruz.",
    image: discoveryImg,
    alt: "İhtiyaç Analizi ve Brief",
    hoverBorder: "hover:border-[oklch(0.828_0.189_84.429)]",
    gradient: "from-[oklch(0.828_0.189_84.429)]/90",
    textColor: "text-[oklch(0.828_0.189_84.429)]"
  },
  {
    number: 2,
    title: "Konsept & Tasarım",
    description: "Markanıza ve etkinliğin ruhuna uygun, yaratıcı ve uygulanabilir tasarımlar geliştiriyoruz.",
    image: implementationImg,
    alt: "Konsept ve Tasarım",
    hoverBorder: "hover:border-teal-500",
    gradient: "from-teal-600/90",
    textColor: "text-teal-700"
  },
  {
    number: 3,
    title: "Projelendirme & Onay",
    description: "Teknik çizimler, ölçülendirme ve uygulama detaylarını netleştirerek onay sürecini tamamlıyoruz.",
    image: optimizationImg,
    alt: "Projelendirme ve Onay",
    hoverBorder: "hover:border-[oklch(0.828_0.189_84.429)]",
    gradient: "from-[oklch(0.828_0.189_84.429)]/90",
    textColor: "text-[oklch(0.828_0.189_84.429)]"
  },
  {
    number: 4,
    title: "Üretim & Hazırlık",
    description: "Onaylanan projeyi kendi üretim ve tedarik süreçlerimizle sahaya hazır hale getiriyoruz.",
    image: supportGrowthImg,
    alt: "Üretim ve Hazırlık",
    hoverBorder: "hover:border-teal-500",
    gradient: "from-teal-600/90",
    textColor: "text-teal-700"
  },
  {
    number: 5,
    title: "Kurulum & Uygulama",
    description: "Sahada zamanında kurulum yapıyor, etkinlik süresince teknik destek sağlıyoruz.",
    image: supportGrowthImg,
    alt: "Kurulum ve Uygulama",
    hoverBorder: "hover:border-teal-500",
    gradient: "from-teal-600/90",
    textColor: "text-teal-700"
  }
];

const arrowPath = "M9 5l7 7-7 7";
---

<section class="py-24 bg-neutral-800">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div class="inline-block px-4 py-2 mb-4 bg-teal-100 text-teal-800 text-label rounded-full">
        Nasıl Çalışıyoruz?
      </div>
      <h2 class="heading-section text-slate-900">
        İş akış <span class="gradient-gold-teal">Süreçlerimiz</span>
      </h2>
      <p class="text-body text-slate-600 max-w-3xl mx-auto">
        A streamlined approach designed to deliver results from day one, with continuous optimization and support.
      </p>
    </div>

    <div class="relative">
      <!-- Connection Line (hidden on mobile) -->
      <div class="hidden lg:block absolute top-24 left-0 right-0 h-0.5 bg-linear-to-r from-[oklch(0.828_0.189_84.429)]/30 via-teal-200 to-[oklch(0.828_0.189_84.429)]/30"></div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 relative">
        {steps.map((step) => (
          <div class="relative h-full">
            <div class={`bg-neutral-800 rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all border-2 border-neutral-700 ${step.hoverBorder} relative z-10 flex flex-col h-full`}>
              <div class="relative h-48 overflow-hidden">
                <Image 
                  src={step.image}
                  alt={step.alt}
                  class="w-full h-full object-cover"
                  width={800}
                  height={400}
                />
                <div class={`absolute inset-0 bg-linear-to-t ${step.gradient} to-transparent`}></div>
                <div class={`absolute top-4 right-4 w-12 h-12 rounded-full bg-white/90 backdrop-blur-sm flex items-center justify-center ${step.textColor} font-bold text-xl shadow-lg`}>
                  {step.number}
                </div>
              </div>
              <div class="p-8 flex flex-col flex-1">
                <h3 class="heading-subsection text-slate-900 mb-3">{step.title}</h3>
                <p class="text-body text-slate-600 flex-1">
                  {step.description}
                </p>
                <div class={`mt-6 flex items-center text-sm ${step.textColor}`}>
                  Daha fazla
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={arrowPath} />
                  </svg>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Key Benefits -->
    <div class="mt-20 grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-[oklch(0.828_0.189_84.429)]/20 text-[oklch(0.828_0.189_84.429)] mb-4">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h4 class="text-lg font-semibold text-white mb-2">Zamanında Kurulum</h4>
        <p class="text-neutral-300">Planlanan tarihte, eksiksiz saha uygulaması.</p>
      </div>
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-teal-100 text-teal-600 mb-4">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        <h4 class="text-lg font-semibold text-white mb-2">Uçtan Uca Süreç Yönetimi</h4>
        <p class="text-neutral-300">Tasarım, üretim ve kurulum tek ekip tarafından yönetilir.</p>
      </div>
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-[oklch(0.828_0.189_84.429)]/20 text-[oklch(0.828_0.189_84.429)] mb-4">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
        <h4 class="text-lg font-semibold text-white mb-2">Deneyimli Teknik Kadro</h4>
        <p class="text-neutral-300">Saha gerekliliklerine hakim uzman ekip.</p>
      </div>
    </div>
  </div>
</section>


