---
import TestimonialCard from '../ui/TestimonialCard.astro';

import testimonial1Img from '@assets/photo-1494790108377-be9c29b29330.jpg';
import testimonial2Img from '@assets/photo-1507003211169-0a1dd7228f2d.jpg';
import testimonial3Img from '@assets/photo-1438761681033-6461ffad8d80.jpg';

const testimonials= [
  {
    quote: "AstroFlow transformed our entire supply chain. Their automated warehousing solution reduced our fulfillment time by 40% and cut operational costs significantly. The real-time visibility they provide is game-changing.",
    name: "Sarah Mitchell",
    role: "VP of Operations, TechCorp",
    image: testimonial1Img,
    ringColor: "ring-blue-200"
  },
  {
    quote: "The manufacturing capabilities at AstroFlow are exceptional. They've helped us scale production while maintaining the highest quality standards. Their ISO-certified processes give us complete confidence.",
    name: "Robert Johnson",
    role: "CEO, Global Manufacturing Inc.",
    image: testimonial2Img,
    ringColor: "ring-teal-200"
  },
  {
    quote: "Outstanding logistics partner. Their fleet management and route optimization have improved our delivery times and reduced fuel costs. The command center gives us complete visibility into every shipment.",
    name: "Emily Williams",
    role: "Supply Chain Director, RetailMax",
    image: testimonial3Img,
    ringColor: "ring-blue-200"
  }
];
---

<section class="section-bg-dark py-24">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div class="pill-gold mb-4">
        Client Success Stories
      </div>
      <h2 class="heading-section">
        Trusted by <span class="text-gold">Industry Leaders</span>
      </h2>
      <p class="text-body text-body-secondary max-w-3xl mx-auto">
        See how we've helped companies transform their supply chain operations and achieve remarkable results.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <TestimonialCard testimonial={testimonial} variant="home" />
      ))}
    </div>
  </div>
</section>
