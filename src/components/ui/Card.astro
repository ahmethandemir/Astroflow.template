---
interface Props {
  class?: string;
  hover?: boolean;
  style?: string;
}

const { 
  class: className = '',
  hover = false,
  style
} = Astro.props;

const baseStyles = 'bg-neutral-800 rounded-xl shadow-lg p-6 border border-neutral-700';
const hoverStyles = hover ? 'transition-all duration-300 hover:shadow-2xl hover:-translate-y-1' : '';
const classes = `${baseStyles} ${hoverStyles} ${className}`;
---

<div class={classes} style={style}>
  <slot />
</div>
