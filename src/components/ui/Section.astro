---
interface Props {
  class?: string;
  background?: 'white' | 'gray' | 'gradient' | 'dark';
  id?: string;
}

const { 
  class: className = '',
  background = 'white',
  id
} = Astro.props;

const bgStyles = {
  white: 'bg-neutral-800',
  dark: "bg-white",
  gray: 'bg-neutral-700',
  gradient: 'bg-linear-to-br from-neutral-800 via-neutral-900 to-neutral-800',
};

const classes = `py-16 lg:py-24 ${bgStyles[background]} ${className}`;
---

<section class={classes} id={id}>
  <div class="container mx-auto">
    <slot />
  </div>
</section>

