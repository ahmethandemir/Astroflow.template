---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/ui/Section.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import CapabilityAccordion from '../components/react/CapabilityAccordion';
import { Image } from 'astro:assets';
import ImageReveal from '../components/react/ImageReveal';

import warehouseImg from '@assets/photo-1566576721346-d4a3b4eaeb55.jpg';
import manufacturingImg from '@assets/photo-1581091226825-a6a2a5aee158.jpg';
import transportationImg from '@assets/photo-1601584115197-04ecc0da31d7.jpg';
import supplyChainImg from '@assets/photo-1460925895917-afdab827c52f.jpg';
import valueAddedServicesImg from '@assets/photo-1558618666-fcd25c85cd64.jpg';
import technologyIntegrationImg from '@assets/photo-1558494949-ef010cbdcc31.jpg';
import heroBgImg from '@assets/photo-1586528116311-ad8dd3c8310d.jpg';
import ctaBgImg from '@assets/photo-1553413077-190dd305871c.jpg';

const capabilities = [
  {
    title: 'Fuar Stand Çözümleri',
    description: 'Markanızı fuar alanında öne çıkaran, estetik ve işlevsel stand çözümleri tasarlıyor ve uyguluyoruz.',
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
    </svg>`,
    image: warehouseImg,
    features: [
      'Özel Tasarım Ahşap Standlar',
      'Maxima Sistem Standlar',
      'Modüler Stand Çözümleri',
      'Kongre & Tanıtım Standları',
      'Mağaza / Ürün Teşhir Standları'
    ]
  },
  {
    title: 'Kongre & Konferans Hizmetleri',
    description: 'Kongre ve konferanslar için sahne, teknik altyapı ve alan tasarımlarını eksiksiz şekilde hayata geçiriyoruz.',
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
    </svg>`,
    image: manufacturingImg,
    features: [
      'Sahne & Dekor Tasarımı',
      'Ses, Işık ve Görüntü Sistemleri',
      'Truss ve Teknik Yapı Kurulumları',
      'Simultane Çeviri Altyapısı',
      'Podyum, Kürsü ve Alan Donanımları'
    ]
  },
  {
    title: 'Reklam & Tanıtım Üretimleri',
    description: 'Marka görünürlüğünü artıran, iç ve dış mekana uygun reklam üretimleri sağlıyoruz.',
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
    </svg>`,
    image: transportationImg,
    features: [
      'Billboard & Totem İmalatı',
      'Dijital Baskı Uygulamaları',
      'Banner, Afiş, Broşür, Katalog',
      'Vinil Karkas ve Büyük Ölçekli Uygulamalar'
    ]
  },
  {
    title: 'Mağaza & Showroom Uygulamaları',
    description: 'Marka kimliğini yansıtan, fonksiyonel ve estetik mağaza ve showroom alanları tasarlıyoruz.',
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
    </svg>`,
    image: supplyChainImg,
    features: [
      'Mağaza Tasarımı & Uygulama',
      'Showroom Konsept Tasarımları',
      'Ürün Sergileme ve Teşhir Üniteleri'
    ]
  },
  {
    title: 'Tasarım & Projelendirme',
    description: 'Her projeye ihtiyaç analizi ile başlıyor, yaratıcı ve uygulanabilir tasarımlar geliştiriyoruz.',
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
    </svg>`,
    image: valueAddedServicesImg,
    features: [
      'Konsept Geliştirme',
      '3D Tasarım & Teknik Çizimler',
      'Alan Planlaması',
      'Marka Kimliğine Uyumlu Tasarım'
    ]
  },
  {
    title: 'Üretim, Kurulum & Teknik Destek',
    description: 'Projeleri kendi üretim ve uygulama süreçlerimizle, zamanında ve eksiksiz şekilde teslim ediyoruz.',
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
    </svg>`,
    image: technologyIntegrationImg,
    features: [
      'İmalat & Atölye Süreçleri',
      'Sahada Kurulum & Söküm',
      'Elektrik & Teknik Altyapı',
      'Fuar Süresince Teknik Destek'
    ]
  }
];
---

<BaseLayout title="Our Capabilities - AstroFlow">
  <!-- Hero Section -->
  <section class="relative h-[70vh] min-h-[500px] flex items-center overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0">
      <Image 
        src={heroBgImg}
        alt="Modern logistics and manufacturing capabilities"
        class="w-full h-full object-cover"
        width={2070}
        height={1380}
      />
      <div class="absolute inset-0 bg-linear-to-r from-slate-900/95 via-slate-900/80 to-slate-900/50"></div>
    </div>

    <!-- Content -->
    <div class="container mx-auto relative z-10 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <div class="pill-gold mb-6">
          Kapsamlı Çözümler
        </div>
        
        <h1 class="heading-hero mb-6">
          Hizmetlerimiz<span class="text-gold">
          </span>
      </h1>
        
        <p class="text-body text-body-secondary mb-8 max-w-3xl mx-auto">
        Fikirden kuruluma, tasarımdan uygulamaya kadar fuar, kongre ve markalaşma süreçlerinde uçtan uca çözümler sunuyoruz.
      </p>
      </div>
    </div>
  </section>

  <!-- Main Capabilities -->
  <Section background="white">
    <!-- Accordion View for Mobile/Compact -->
    <div class="lg:hidden mb-12">
      <CapabilityAccordion capabilities={capabilities} client:load />
    </div>
    
    <!-- Grid View for Desktop -->
    <div class="hidden lg:block space-y-24">
      {capabilities.map((capability, index) => (
        <div class={`grid grid-cols-1 lg:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'lg:grid-flow-dense' : ''}`}>
          <div class={`${index % 2 === 1 ? 'lg:col-start-2' : ''} animate-fadeInUp`}>
            <div class="flex items-center justify-center w-16 h-16 rounded-xl bg-gold text-neutral-900 mb-6 shadow-lg">
              <div class="w-8 h-8" set:html={capability.icon.replace('w-12 h-12', 'w-8 h-8').replace('currentColor', 'currentColor')} />
            </div>
            <h2 class="heading-section-light mb-4">
              {capability.title}
            </h2>
            <p class="text-body text-body-secondary-light mb-6">
              {capability.description}
            </p>
            <ul class="space-y-3">
              {capability.features.map((feature) => (
                <li class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-teal-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-body-light">{feature}</span>
                </li>
              ))}
            </ul>
          </div>
          <div class={`${index % 2 === 1 ? 'lg:col-start-1 lg:row-start-1' : ''}`}>
            <ImageReveal client:load delay={index * 0.1}>
              <div class="relative aspect-4/3 group overflow-hidden rounded-2xl shadow-2xl">
                <Image 
                  src={capability.image}
                  alt={capability.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  width={1200}
                  height={800}
                />
                <div class="absolute inset-0 bg-linear-to-t from-slate-900/60 via-transparent to-transparent"></div>
                <div class="absolute bottom-0 left-0 right-0 p-8 text-white">
                  <h3 class="text-2xl font-bold mb-2">{capability.title}</h3>
                  <p class="text-gray-200">{capability.description}</p>
                </div>
              </div>
            </ImageReveal>
          </div>
        </div>
      ))}
    </div>
  </Section>

  <!-- Process Section -->
  <Section background="white">
    <div class="text-center mb-16">
      <div class="pill-gold mb-4">
        Yaklaşımımız
      </div>
      <h2 class="heading-section mb-4">
        Çalışma <span class="text-gold">Sürecimiz</span>
      </h2>
      <p class="text-body text-body-secondary max-w-3xl mx-auto">
        Nasıl Çalışıyoruz?
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      {[
        { 
          step: '01', 
          title: 'İhtiyaç Analizi & Brief', 
          description: 'Projenin hedeflerini, alan gereksinimlerini ve beklentileri netleştirerek işe başlıyoruz.',
          icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>`
        },
        { 
          step: '02', 
          title: 'Konsept & Tasarım', 
          description: 'Markanıza ve etkinliğin ruhuna uygun, yaratıcı ve uygulanabilir tasarımlar geliştiriyoruz.',
          icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>`
        },
        { 
          step: '03', 
          title: 'Projelendirme & Onay', 
          description: 'Teknik çizimler, ölçülendirme ve uygulama detaylarını netleştirerek onay sürecini tamamlıyoruz.',
          icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>`
        },
        { 
          step: '04', 
          title: 'Üretim & Hazırlık', 
          description: 'Onaylanan projeyi kendi üretim ve tedarik süreçlerimizle sahaya hazır hale getiriyoruz.',
          icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>`
        },
        { 
          step: '05', 
          title: 'Kurulum & Uygulama', 
          description: 'Sahada zamanında kurulum yapıyor, etkinlik süresince teknik destek sağlıyoruz.',
          icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>`
        }
      ].map((process, index) => (
        <Card hover class="text-center animate-fadeInUp group bg-neutral-800 border-neutral-700" style={`animation-delay: ${index * 0.1}s`}>
          <div class="flex items-center justify-center w-16 h-16 mx-auto mb-4 rounded-xl bg-gold text-neutral-900 shadow-lg group-hover:scale-110 transition-transform">
            <div set:html={process.icon} />
          </div>
          <div class="text-stat text-gold mb-2">{process.step}</div>
          <h3 class="heading-subsection mb-3">{process.title}</h3>
          <p class="text-body text-body-secondary">{process.description}</p>
        </Card>
      ))}
    </div>
  </Section>

  <!-- CTA Section -->
  <section class="relative py-32 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <Image 
        src={ctaBgImg}
        alt="Modern warehouse operations"
        class="w-full h-full object-cover"
        width={2070}
        height={1380}
      />
      <div class="absolute inset-0 bg-neutral-900/90"></div>
    </div>

    <!-- Content -->
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="max-w-4xl mx-auto text-center text-white">
        <div class="pill-gold mb-6">
          Bugün başlayalım
        </div>
        <h2 class="heading-section mb-6 leading-tight">
          Projenizi <span class="text-gold">birlikte</span> hayata geçirelim.
      </h2>
        <p class="text-body text-body-secondary mb-12 max-w-2xl mx-auto">
          Tasarım, üretim ve uygulama süreçlerini tek elden yöneterek markanızı fuar ve etkinlik alanlarında güçlü şekilde temsil ediyoruz.
      </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <Button href="/rfq" size="lg" class="btn-primary">
          Teklif al
        </Button>
          <Button href="/facilities" size="lg" class="btn-outline-black">
          İletişime geç
        </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

